{
  "ConnectionStrings": {
    "postgres": "Server=localhost; Port=5432; Database=ref-app; User Id=postgres; Password=postgres"
  },

  // RabbitMQ

  "rabbitMQ": {
    "endpointUri": "amqp://guest:guest@localhost:5672/",
    "clientName": "ref-app"
  },

  // Correlation log settings

  "correlation": {
    "correlationIdPropertyName": "correlationId",
    "causationIdPropertyName": "causationId",
    "commandIdPropertyName": "commandId",
    "queryIdPropertyName": "queryId",
    "eventIdPropertyName": "eventId"
  },

  // Http request options

  "httpRequest": {
    "domainTypeHeaderKey": "domain-type",
    "correlationIdHeaderKey": "correlation-id",
    "causationIdHeaderKey": "causation-id"
  },

  // Single-sign-on

  "singleSignOn": {
    "authority": "http://localhost:8080/auth/realms/develop",
    "audience": "account",
    "requireHttpsMetadata": false,
    "saveToken": true,
    "showPII": false
  },

  // OpenApi settings

  "openApi": {
    "documentName": "Document name",
    "path": "/swagger",
    "appName": "REF-APP",
    "clientId": "refApp"
  },

  "openApiDocument": {
    "documentName": "v1",
    "appTitle": "ServiceComponents",
    "appVersion": "1.0.0"
  },

  "openApiSso": {
    "securitySchemeName": "OAuth2",
    "securityScheme": "http",
    "securitySchemeType": "OAuth2",
    "oAuthFlow": "Implicit",
    "authority": "http://localhost:8080/auth/realms/develop"
  },

  // Serilog settings

  "Serilog": {

    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Warning",
        "System": "Error"
      }
    },

    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss+fff}{EventType:x8} {Level:u3}][{Application}] {Message:lj} {NewLine}{Exception}",
          "restrictedToMinimumLevel": "Information"
        }
      }
    ],

    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],

    "Properties": {
      "Application": "REF-APP"
    }
  }
}